<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
           
           <bean class="com.giri.footwear.Footwear" id="footwear">
           <constructor-arg name="brand" value="Bata"/>
           <constructor-arg name="color" value="Black"/>
           <constructor-arg name="price" value="200"/>
           <constructor-arg name="material" ref="material"/>
           </bean>
           
            <bean class="com.giri.footwear.Material" id="material">
           <constructor-arg name="plastic" value="Polyvinyl"/>
           <constructor-arg name="cloth" value="Nylon"/>
           <constructor-arg name="rubber" value="Crepe"/>
           </bean>
           
           <bean class="com.giri.fruit.Fruit" id="fruit">
            <constructor-arg name="name" value="Grapes"/>
           <constructor-arg name="color" value="White"/>
           <constructor-arg name="price" value="50"/>
            <constructor-arg name="tasty" value="true"/>
           <constructor-arg name="vitamin" ref="vitamin"/>      
           </bean>
           
           <bean class="com.giri.fruit.Vitamin" id="vitamin">
           <constructor-arg name="type" value="Vitamin C"/>
           <constructor-arg name="waterSoluble" value="true"/>
           <constructor-arg name="fatSoluble" value="false"/>
           </bean>
</beans>